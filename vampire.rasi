* {
    background-color:      Black;
    border-color:          Red;
    text-color:           White;
    font:            "FantasqueSansMono Nerd Font 9";
}

window {
    anchor:     north;
    location:   north;
    width:      100%;
    padding:    4px;
    children:   [ horibox ];
}

horibox {
    orientation: horizontal;
    children:   [ prompt, entry, listview ];
}

listview {
    layout:     horizontal;
    spacing:    5px;
    lines:      100;
}

entry {
    expand:     false;
    width:      10em;
}

element {
    padding: 0px 2px;
}
prompt {
  text-color: White;
}
element selected {
    background-color: Black;
    text-color: Red;
}
